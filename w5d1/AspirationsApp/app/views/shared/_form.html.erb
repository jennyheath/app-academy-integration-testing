<form action="<%= form_action %>" method="post">
  <%= auth_input %>

  <label>Username
    <input type="text"
           name="user[username]"
           value="<%= user.username %>">
  </label>

  <label>Password
    <input type="password"
           name="user[password]">
  </label>

  <input type="submit" value="<%= button_text %>">
</form>
